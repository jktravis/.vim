snippet nirb "Normal Inline NIRB"
<!-- Remember to update the OBJECTTYPE in the metadata as "external resource" -->
<!--#include virtual="/include/thickbox.txt"-->  

<!-- add this to pages that have an old template
<link href="/css/thickbox-oldtemplates.css" rel="stylesheet"> -->

<!-- Example link -->
<a href="#TB_inline?height=300&width=450&inlineId=${1:tb_external1}" title="$2" target="_blank" class="thickbox externalbox">$2</a>


<!-- start inline box $2 : $1-->
<div class="hide" id="$1">
	<div class="boxCenter">
		<h3 class="boxheader">You are exiting the ISSAIC Web Server</h3>This SAIC resource is not managed by ISSAIC and requires a log in.
	</div>

	<div class="highlightedBox">
		<p>You will now access $2</p>
		<p class="highlighted"><a href="${3}" target="_blank" title="This link takes you to the $2 web site">$3</a></p>
	</div>

	<div class="boxContact">
		<dl>
			<dt>SAIC Contacts</dt>

			<dd><a onclick="openhelp(this.href); return false" href="/shell-cgi/ezdir.pl?${4}">${5:Enter SAIC POC Name}</a></dd>

			<dd class="feedback"><a href="/shell-cgi/about_this_page.pl" onclick="document.about_this_page.action = this.href ;document.about_this_page.template.value='/template/about_this_page.html';document.about_this_page.about_my_page.value = escape(document.location+'');openhelp('/template/blank.html');document.about_this_page.submit(); return false;" class="feedbackIcon">Feedback</a></dd>
		</dl>
	</div>

	<div class="boxSD">
		<dl>
			<dt>SAIC Service Desk</dt>
			<dd><!--#include virtual="/its/services/servicedesk/include/nonissaicresource.txt"--></dd> 
		</dl>
	</div>
</div>
<!-- end inline box $2 : $1 -->

endsnippet

